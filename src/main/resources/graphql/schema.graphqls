type Query {
    books: [Book]
    bookById(id: Int): Book
}

type Mutation {
    saveBook(book: BookInput!): Book
    saveAuthor(author: AuthorInput!): Author
}

type Book {
    id: ID
    name: String
    pageCount: Int
    author: Author
}

type Author {
    id: ID
    name: String
}

input BookInput {
    name: String!
    authorId: ID!
    pageCount: Int
}

input AuthorInput {
    name: String!
}