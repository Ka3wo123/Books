pipeline {
    agent {
        node {
            label 'docker-book-service-agent'
        }
    }
    triggers {
        pollSCM '*/1 * * * *'
    }

    stages {
        stage('Verify Directory') {
            steps {
                sh 'pwd && ls -l'
            }
        }
        stage('Build') {
            steps {
                script {
                    sh './gradlew build -x test'
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    sh './gradlew test'
                }
            }
        }
    }
}
