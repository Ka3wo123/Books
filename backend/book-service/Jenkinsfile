pipeline {
    agent {
        node {
            label 'docker-book-service-agent'
        }
    }
    triggers {
        pollSCM '*/1 * * * *'
    }

    stages {
        dir('backend/book-service') {
            stage('Build') {
                steps {
                    script {
                        sh './gradlew build -x test'
                    }
                }
            }

            stage('Test') {
                steps {
                    script {
                            sh './gradlew test'

                    }
                }
            }
        }
    }

}
